@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">用户登录</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "caption" }))
{

    <div class="col-md-6 col-md-offset-3">

        <div class="form-group">
            @Html.Label("用户名")
            @Html.TextBox("userName", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("密码")
            @Html.Password("passWord", "", new { @class = "form-control" })
        </div>

        <input type="submit" class="btn btn-primary active pull-right" value="登陆" />
    </div>

}


