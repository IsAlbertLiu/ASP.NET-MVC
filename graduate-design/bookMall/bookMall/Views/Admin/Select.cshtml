@model IEnumerable<bookMall.Models.userTable>

@{
    ViewBag.Title = "Select";
}

<h2 class="text-center text-info">管理员页面</h2>

<div class="nav-item container mangePanel">

        <button class="nav-link collapsed btn btn-success" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            <span class="glyphicon glyphicon-asterisk"></span>
            <span>管理面板</span>
        </button>
    <br/>
    <br/>

            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar" style="">
                <div class="bg-white py-2 collapse-inner rounded">
                    <h6 class="collapse-header text-info"><span class="glyphicon glyphicon-align-left"></span>管理类别：</h6>

                    <button class="btn btn-info">
                        <span class="glyphicon glyphicon-user"></span>
                        @Html.ActionLink("管理用户", "Select", "Admin", new { @class = "slogn collapse-item" })
                    </button>
                    <br/>
                    <br/>
                    <button class="btn btn-info">
                        <span class="glyphicon glyphicon-book"></span>
                        @Html.ActionLink("管理图书", "manageBooks", "Admin", new { @class = "slogn collapse-item" })
                    </button>

                </div>
            </div>
</div>


@using (Html.BeginForm("Select", "Admin", FormMethod.Post))
{
    <table class="table">
        <tr class="warning">
            <th>查询</th>
            <th>搜索框</th>
            <th>操作</th>
        </tr>
        <tr class="info">
            <td >
                @Html.Label("用户ID")
            </td>
            <td>
                @Html.TextBox("userName")
            </td>
            <td>
                <button type="submit" class="btn btn-success">查询</button>
                    <button class="btn btn-success">
                        @Html.ActionLink("新建用户", "AddUser","", new { @class = "slogn text-info" })
                    </button>
            </td>
        </tr>
    </table>
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            用户姓名
        </th>
        <th>
            用户密码
        </th>
        <th>
            用户角色
        </th>
        <th>
            操作
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.passWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("修改数据", "Modify", new { id = item.userName })
                </button>

                <button class="btn btn-danger">
                    @Html.ActionLink("删除", "Delete", new { id = item.userName })
                </button>
            </td>

        </tr>
    }
</table>
   
