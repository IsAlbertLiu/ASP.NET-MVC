@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center">删除用户</h2>
@using(Html.BeginForm("Delete","Admin",FormMethod.Post)){
    <table class="table">
        <tr class="success">
            <td>
                @Html.Label("用户名")
            </td>
            <td>
                @Html.TextBox("userName")
            </td>
            <td>
                @Html.Label("密码")
            </td>
            <td>
                @Html.TextBox("passWord")
            </td>
            <td>
                @Html.Label("用户角色")
            </td>
            <td>
                @Html.Display("role")
            </td>
        </tr>
    </table>
   
    <button class="btn btn-danger" type="submit" value="修改" >删除</button>
    
    

}