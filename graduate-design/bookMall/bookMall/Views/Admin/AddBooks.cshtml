@{
    ViewBag.Title = "AddBooks";
}

<h2>添加图书</h2>
@using (Html.BeginForm("AddBooks", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("书籍名称");
    @Html.TextBox("bookTitle");
    @Html.Label("书籍价格");
    @Html.TextBox("bookPrice");
    @Html.Label("书籍作者");
    @Html.TextBox("bookAuthor");

    @Html.Label("书籍封面");
    <text>选择上传文件：</text><input name="file" type="file" id="file" />
    <input type="submit" name="Upload" value="Upload" />
                      
    
    <input type="submit" value="添加" />
}