@model IEnumerable<bookMall.Models.Books>

@{
    ViewBag.Title = "Index";
}

<h2>书籍列表</h2>
<table>
    <tr>
        <th>
           编号
        </th>
        <th>
            标题
        </th>
        <th>
            封面
        </th>
        <th>
            价格
        </th>
        <th>
           作者
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td>
            <img src="@item.BookCoverUrl" height="120" >
            @*   @Html.DisplayFor(modelItem => item.BookCoverUrl)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Authors)
        </td>
        <td>
            @Html.ActionLink("购书", "buyBook", new { id = item.BookId }) 
        </td>
    </tr>
}

</table>

